# ============================================
# Application Ports
# ============================================
PORT=5001
VITE_APP_PORT=5002
VITE_WEB_PORT=5003

# ============================================
# Database (PostgreSQL)
# ============================================
# Generate strong passwords with: openssl rand -base64 32
POSTGRES_DB=dental_saas
POSTGRES_USER=dental
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# Database connection string
# Update with your POSTGRES_USER, POSTGRES_PASSWORD, and POSTGRES_DB values
DATABASE_URL="postgresql://dental:CHANGE_ME_STRONG_PASSWORD@localhost:5432/dental_saas?schema=public"

# ============================================
# Cache (Redis)
# ============================================
# Generate password with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_URL="redis://:CHANGE_ME_STRONG_REDIS_PASSWORD@localhost:6379"

# ============================================
# JWT Configuration
# ============================================
# Generate secrets with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_MIN_32_CHARS
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Super Admin Setup
# ============================================
# Required for first-time superadmin creation
# Generate with: openssl rand -hex 16
# SECURITY: Remove or change after creating first super admin
SETUP_KEY=CHANGE_ME_SETUP_KEY

# ============================================
# Environment Mode
# ============================================
NODE_ENV=development

# ============================================
# CORS Configuration
# ============================================
# Must match your frontend URL exactly (no trailing slash)
CORS_ORIGIN=http://localhost:5002

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=http://localhost:5001

# ============================================
# Email Service (Resend) - Optional
# ============================================
# Get your API key from https://resend.com
# For development, use "onboarding@resend.dev" as EMAIL_FROM (no domain verification needed)
RESEND_API_KEY=
EMAIL_FROM=Alveo System <onboarding@resend.dev>
