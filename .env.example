# Database
# Generate strong passwords with: openssl rand -base64 32
POSTGRES_DB=dental_saas
POSTGRES_USER=dental
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# Redis
# Generate password with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD
REDIS_PORT=6379

# API
# Update DATABASE_URL with your POSTGRES_USER and POSTGRES_PASSWORD values
DATABASE_URL="postgresql://dental:CHANGE_ME_STRONG_PASSWORD@localhost:5432/dental_saas?schema=public"
REDIS_URL="redis://:CHANGE_ME_STRONG_REDIS_PASSWORD@localhost:6379"
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173

# JWT Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Super Admin Setup (required for first-time superadmin creation)
# Generate with: openssl rand -base64 16
SETUP_KEY=CHANGE_ME_SETUP_KEY

# Email (Resend)
# Get your API key from https://resend.com
# For development, use "onboarding@resend.dev" as EMAIL_FROM (no domain verification needed)
RESEND_API_KEY=
EMAIL_FROM="Alveo System <onboarding@resend.dev>"
